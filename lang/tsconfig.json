{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist/",

    "strict": true,
    "noImplicitAny": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@/*": [ "src/*" ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["node_modules"]
}
